<!DOCTYPE html>
<html lang="nl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Item Winkel</title>
  <link rel="stylesheet" href="/css/items.css">
  <script src="/js/get_username.js" defer></script>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Bangers&display=swap">
</head>
<body>

  <!-- Navbar -->
  <header class="navbar">
    <div class="left">
      <a href="/favoriet-karakter" class="back-btn">←</a>
    </div>
    <div class="center">
      <nav>
        <span class="navbar-title">ITEM WINKEL</span>
      </nav>
    </div>
    <div class="right">
      <div class="user-info">
        <img id="user-profile-img" src="/assets/question-mark.svg" alt="User" class="user-profile" />
        <span class="username" id="username_display"><%= username || "Gebruikersnaam" %></span>
        <button class="info-btn">ℹ️</button>
      </div>
    </div>
  </header>

  <!-- Main -->
  <main class="items-section">
    <h1>Kies een item</h1>
    <div class="items-grid">
      <!-- Wapens -->
      <div class="item-category">
        <h2>Wapens</h2>
        <select id="filter-weapons">
          <option value="">Alle rarities</option>
          <option value="common">Common</option>
          <option value="uncommon">Uncommon</option>
          <option value="rare">Rare</option>
          <option value="epic">Epic</option>
          <option value="legendary">Legendary</option>
          <option value="other">Overige</option>
        </select>
        <div id="weapons-grid" class="grid-column">
          <% weapons.forEach(weapon => { %>
            <div class="item-card rarity-<%= weapon.rarity %>">
              <img src="<%= weapon.image %>" alt="<%= weapon.name %>">
              <h3><%= weapon.name %></h3>
            </div>
          <% }) %>
        </div>
      </div>

      <!-- Emotes -->
      <div class="item-category">
        <h2>Emotes</h2>
        <select id="filter-emotes">
          <option value="">Alle rarities</option>
          <option value="common">Common</option>
          <option value="uncommon">Uncommon</option>
          <option value="rare">Rare</option>
          <option value="epic">Epic</option>
          <option value="legendary">Legendary</option>
          <option value="other">Overige</option>
        </select>
        <div id="emotes-grid" class="grid-column">
          <% emotes.forEach(emote => { %>
            <div class="item-card rarity-<%= emote.rarity %>">
              <img src="<%= emote.image %>" alt="<%= emote.name %>">
              <h3><%= emote.name %></h3>
            </div>
          <% }) %>
        </div>
      </div>

      <!-- Back Blings -->
      <div class="item-category">
        <h2>Back Blings</h2>
        <select id="filter-backblings">
          <option value="">Alle rarities</option>
          <option value="common">Common</option>
          <option value="uncommon">Uncommon</option>
          <option value="rare">Rare</option>
          <option value="epic">Epic</option>
          <option value="legendary">Legendary</option>
          <option value="other">Overige</option>
        </select>
        <div id="backblings-grid" class="grid-column">
          <% backblings.forEach(backbling => { %>
            <div class="item-card rarity-<%= backbling.rarity %>">
              <img src="<%= backbling.image %>" alt="<%= backbling.name %>">
              <h3><%= backbling.name %></h3>
            </div>
          <% }) %>
        </div>
      </div>
    </div>

    <div id="popup-message" class="popup-message"></div>
  </main>

  <script src="/js/items.js"></script>
</body>
</html>
